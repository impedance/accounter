
<h1>Budgets</h1>

<div class="assigning-info">
  <b>Ready to assign:</b><%= @available_amount %>
</div>

<div class="budgets_list">
  <% @budgets.each do |budget| %>
    <div class="budgets_item">
      <div class="budgets_item-title">
        <%= link_to budget.name, budget_path(budget) %>
      </div>
      <div class="budgets_item-body">
        <a href="<%= budget_path(budget)%>/assign" class="budgets_item-button">
          assign
        </a>
        <a href="<%= budget_path(budget)%>/spend" class="budgets_item-button">
          spend
        </a>
      </div>
      <div class="budgets_item-sum">
        <%= budget.allocated_sum || 0 %>
      </div>
    </div>
  <% end %>
  <div class="budgets_item">
    <%= link_to 'Create budget', new_budget_path, class: 'budgets_item-body' %>
  </div>
</div>
